@model IEnumerable<you.Models.Product>

@{
    ViewBag.Title = "Termékek";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>Termékek</h2>

<br>

@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    <input type="text" name="search" placeholder="Terméknév">
    <input type="submit" name="submit" value="Keresés">
}

<br>

<table class="table">
    <tr>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product1)
            </td>
            <td>
                @Html.ActionLink("Részletek", "Details", new { id = item.ProductID })
            </td>
        </tr>
    }

</table>
